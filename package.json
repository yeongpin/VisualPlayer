{
  "name": "visual-player",
  "version": "1.3.8-preview",
  "description": "Visual Player",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "pack": "electron-builder --dir"
  },
  "author": {
    "name": "YeongPin"
  },
  "build": {
    "appId": "com.visualplayer.app",
    "productName": "Visual Player",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!external/ffmpeg/**",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "Logo.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Visual Player",
      "installerIcon": "Logo.ico",
      "uninstallerIcon": "Logo.ico",
      "installerHeaderIcon": "Logo.ico"
    },
    "asar": true,
    "asarUnpack": [
      "node_modules/@electron/remote/**/*",
      "external/ffmpeg/bin/**",
      "node_modules/fluent-ffmpeg/**/*",
      "node_modules/dcraw/**/*"
    ],
    "extraResources": [
      {
        "from": "external/ffmpeg/bin",
        "to": "external/ffmpeg/bin",
        "filter": ["**/*"]
      }
    ]
  },
  "dependencies": {
    "@electron/remote": "^2.0.12",
    "electron-store": "^8.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "dcraw": "^1.0.3"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^25.1.8"
  }
}
