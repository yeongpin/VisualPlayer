{
  "name": "visual-player",
  "version": "1.5.3-BETA",
  "description": "Visual Player",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "pack": "electron-builder --dir"
  },
  "author": {
    "name": "YeongPin"
  },
  "build": {
    "appId": "com.visualplayer.app",
    "productName": "Visual Player",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!external/ffmpeg/**",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "Logo.ico",
      "artifactName": "${productName}-${version}-win-${arch}.${ext}",
      "fileAssociations": [
        {
          "ext": [
            "mp4",
            "avi",
            "mkv",
            "mov",
            "wmv",
            "flv",
            "webm",
            "m4v",
            "3gp",
            "ts",
            "mts",
            "m2ts"
          ],
          "name": "Video File",
          "description": "Visual Player Video File",
          "icon": "Logo.ico",
          "role": "Editor"
        },
        {
          "ext": [
            "jpg",
            "jpeg",
            "png",
            "gif",
            "bmp",
            "webp",
            "svg"
          ],
          "name": "Image File",
          "description": "Visual Player Image File",
          "icon": "Logo.ico",
          "role": "Editor"
        },
        {
          "ext": [
            "arw",
            "cr2",
            "cr3",
            "dng",
            "nef",
            "orf",
            "raf",
            "rw2",
            "pef",
            "srw"
          ],
          "name": "RAW Image File",
          "description": "Visual Player RAW Image File",
          "icon": "Logo.ico",
          "role": "Editor"
        }
      ]
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "Logo.png",
      "category": "public.app-category.video",
      "artifactName": "${productName}-${version}-mac-${arch}.${ext}",
      "fileAssociations": [
        {
          "ext": [
            "mp4",
            "avi",
            "mkv",
            "mov",
            "wmv",
            "flv",
            "webm",
            "m4v",
            "3gp",
            "ts",
            "mts",
            "m2ts"
          ],
          "name": "Video File",
          "description": "Visual Player Video File",
          "icon": "Logo.png",
          "role": "Editor"
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "notarize": false
    },
    "linux": {
      "target": [
        {
          "ext": [
            "jpg",
            "jpeg",
            "png",
            "gif",
            "bmp",
            "webp",
            "svg"
          ],
          "name": "Image File",
          "description": "Visual Player Image File",
          "icon": "Logo.png",
          "role": "Editor"
        },
        {
          "ext": [
            "arw",
            "cr2",
            "cr3",
            "dng",
            "nef",
            "orf",
            "raf",
            "rw2",
            "pef",
            "srw"
          ],
          "name": "RAW Image File",
          "description": "Visual Player RAW Image File",
          "icon": "Logo.png",
          "role": "Editor"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": false,
      "createStartMenuShortcut": false,
      "shortcutName": "Visual Player",
      "installerIcon": "Logo.ico",
      "uninstallerIcon": "Logo.ico",
      "installerHeaderIcon": "Logo.ico",
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": false,
      "menuCategory": false,
      "include": "build/installer.nsh",
      "warningsAsErrors": false,
      "displayLanguageSelector": false,
      "installerLanguages": [
        "en_US",
        "zh_TW"
      ],
      "uninstallDisplayName": "Visual Player",
      "guid": "a3c4f2d1-8b7e-4a9c-b6d5-1e2f3a4b5c6d"
    },
    "asar": true,
    "asarUnpack": [
      "node_modules/@electron/remote/**/*",
      "external/ffmpeg/bin/**",
      "node_modules/fluent-ffmpeg/**/*",
      "node_modules/dcraw/**/*"
    ],
    "extraResources": [
      {
        "from": "external/ffmpeg/bin",
        "to": "external/ffmpeg/bin",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "dependencies": {
    "@electron/remote": "^2.0.12",
    "dcraw": "^1.0.3",
    "electron-store": "^8.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "moveable": "^0.53.0"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^25.1.8"
  }
}
